body {
	font-family:verdana,arial,helvetica,sans-serif;
	font-size:69%;
	margin:0pt;
	padding:0pt;
}

a {
	color: #002666; 
	text-decoration:none;
}

.state-published {color:#002666 !important;}


#portal-column-two {}

#portal-globalnav {
	background-color:#D2B84C;
	border-bottom:1px solid #002666;
	border-top:1px solid #BF9900;
	height:2.1em;
	line-height:normal;
	list-style-image:none;
	list-style-position:outside;
	list-style-type:none;
	margin:0pt;
	padding:0pt;
	white-space:nowrap;
}


#portal-breadcrumbs {
	background-color:#EAEDF0;
	border-bottom-color:#FFFFFF;
	color:#002666;
	font-size:95%;
	line-height:2.1em;
	list-style-image:none;
	list-style-position:outside;
	list-style-type:none;
	margin:0pt;
	padding:0em 1em 0em 3em;
	text-align:right;
	text-transform:none;
}

#portal-breadcrumbs a {text-decoration: none;}

.breadcrumbSeparator {font-size: 120%;}

