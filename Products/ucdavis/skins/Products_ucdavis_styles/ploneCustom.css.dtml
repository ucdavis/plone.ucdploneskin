#portal-column-one {
    background-color:#E5D699;
}

#portal-column-one .visualPadding {
    padding:2.9em 0em 1em;
}

.portletItem, .portletHeader, .portlet {
    border: 0px;
}

.portlet {
    background: transparent;
    color: #2F4D6A;
}

.portletHeader {
    font-weight: bold;
    border-bottom: 1px solid #D2B84C;
    background: transparent;
    padding: 0px 5px 0px 14px;
    text-transform: capitalize;
    color:#2F4D6A;
    font-size:1.2em;
}

.portletHeader a {color:#2F4D6A;}

.portletItem, .portletFooter {
    border: 0px; background: transparent;
    padding: 0px;
}
.portletFooter span, .portletFooter a {
	padding: 0px 5px 0px 0px;
}
.portletItem .portletItemDetails {
	text-align: left; 
    padding: 0px 0px 5px 10px;
	font-size: 0.9em; 
	color: #76797C;
	line-height: 0.9em;
}
.portletItem a {
	padding-left: 14px;
}

.portletItem div.LSBox {padding-left: 14px;}
.portletItem div.LSBox input.searchField {width: 90px;}
.portletItem fieldset.livesearchContainer {width: inherit;}
.LSResult {padding-top: 0px}
.LSResult fieldset {margin-top: 12px; padding-top: 5px;}


.navTreeItem a, .portletItem p {padding:0pt 0pt 0pt 14px;}

.navTreeItem a, dd.portletItem .navTreeItem a, dd.portletItem a {
    border: 0px;
    display:block;
    text-decoration:none;
    text-transform: capitalize
}

.navTreeItem a:hover, dd.portletItem .navTreeItem a:hover {
    border: 0px; background: #DFCC80;
}

.navTreeCurrentItemPublished {
    color:#000000 !important;
    font-weight:bold;
}

.navTreeCurrentItem {
    font-weight:bold;
    background: #DFCC80; border: 0px !important;
}

.navTree li {margin-bottom:0px;}

#portal-personaltools-wrapper ul {
	background-color:#FFFFFF;
	border-bottom:0 none;
	border-top:0 none;
	padding:0.4em 0 0 0;
	padding-right:2em;
}

#portal-personaltools {
	color:Black;
	line-height:1.6em;
	list-style-image:none;
	list-style-position:outside;
	list-style-type:none;
	margin:0;
	text-align:right;
	text-transform:none;
}

#portal-siteactions {
	float: none;
	text-align: center;
}
#portal-siteactions li a {
	border: 0px;
	border-bottom:1px solid #2F4D6A;
	text-decoration:none;
	color:#002666;
	text-decoration:none;
	text-transform: none;
	padding: 0px; margin: 0px;
}
#portal-siteactions li:after {
	content: " | "
}
#portal-siteactions li a:hover {
	border: 0px; background: transparent;
	color: #77160B;
}

#portal-footer {
	background-color:#FFFFFF;
	border-bottom:medium none #FFFFFF;
	border-top:1px solid #002666;
	color:#4C4C4C;
	float:none;
	line-height:1.9em;
	margin:0 0 1em;
	padding:0.5em 0 0;
	text-align:center;
}

