<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      i18n:domain="plone">

<body>

<div class="dept-name" metal:define-macro="dept_name">

  <table border="0" cellspacing="0" cellpadding="0">

    <tr>

      <td>

        <span tal:condition="python:here.getSectionFromURL() != 'section-front-page'">
          <a tal:attributes="href python:portal_url">
            <img tal:attributes="src python:portal_url + '/portal_properties/ucdploneskin-logo'"
               tal:condition="exists: here/portal_properties/ucdploneskin-logo">
          </a>
        </span>

        <span tal:condition="python:here.getSectionFromURL() == 'section-front-page'">
          <img tal:attributes="src python:portal_url + '/portal_properties/ucdploneskin-logo'"
               tal:condition="exists: here/portal_properties/ucdploneskin-logo">
        </span>

      </td>

      <td>
        <span tal:condition="python:here.getSectionFromURL() == 'section-front-page'
                                    and not here.portal_properties.ucdploneskin_properties.hideDeptName" class="dept-name-text">
          <tal:portaltitle replace="portal_title" />
        </span>

        <span tal:condition="python:here.getSectionFromURL() != 'section-front-page'
                                    and  not here.portal_properties.ucdploneskin_properties.hideDeptName" class="dept-name-text">
          <a tal:attributes="href python:portal_url;
                             title portal_title;
                             accesskey string:1">  

            <tal:portaltitle replace="portal_title" />
          </a>
        </span>
      </td>

    </tr>
  </table>

</div>

</body>
</html>
