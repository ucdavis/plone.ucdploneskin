<html xmlns:tal="http://xml.zope.org/namespaces/tal"
        xmlns:metal="http://xml.zope.org/namespaces/metal"
        i18n:domain="plone">

<body>

<div metal:define-macro="portlet">

  <tal:comment replace="nothing">
    Quick Links
    don't display if there are no quick links
  </tal:comment>

  <span tal:define="quickLinkList python:here.getQuickLinks()" tal:omit-tag="">
    <tal:qlCheck tal:condition="quickLinkList">
  
      <div id="quick-links">
        <h2>Quick links</h2>
        <ul>

          <li tal:repeat="quicklink quickLinkList">

            <a tal:attributes="href quicklink/url">
              <span tal:content="quicklink/text" tal:omit-tag="" />
            </a>

          </li>

        </ul>
      </div>

      <br/><br/>

    </tal:qlCheck>

  </span>

</div>

</body>

</html>
